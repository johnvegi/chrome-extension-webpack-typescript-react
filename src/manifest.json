{
  "name": "LinkedIn helper (alpha)",
  "version": "0.0.1",
  "description": "LinkedIn helper and tools with AI",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "manifest_version": 3,
  "author": "John Liew",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "LinkedIn helper"
  },
  "content_scripts": [{
    "matches": ["https://www.google.com/*"],
    "js": ["content.js"]
  }],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "icons": {  
    "16": "icons/16x16.png",
    "32": "icons/32x32.png"
  }
}